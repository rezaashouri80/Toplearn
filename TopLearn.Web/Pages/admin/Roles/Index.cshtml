@page
@model TopLearn.Web.Pages.admin.Roles.IndexModel
@{
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست نقش ها</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                DataTables Advanced Tables
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                       
                        
                        <a href="/Admin/roles/CreateRole" style="margin: 10px" class="btn btn-success">افزودن نقش جدبد</a>
                        <table class="table table-striped table-bordered table-hover dataTable no-footer">
                            <thead>
                                <tr>
                                    <th>عنوان نقش</th>
                                    <th>دستورات</th>
                                   
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var role in Model.Roles)
                                {
                                    <tr>
                                        <td>@role.RoleTittle</td>
                                       
                                  
                                       
                                        <td>
                                            <a href="/admin/Roles/EditRole/@role.RoleId" class="btn btn-sm btn-success">ویرایش</a>
                                            <a href="/Admin/roles/deleterole/@role.RoleId" class="btn btn-sm btn-danger">حذف</a>

                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                        <!-- /.table-responsive -->

                    </div>
                </div><!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
    </div>
    <!-- /.col-lg-12 -->
</div>
