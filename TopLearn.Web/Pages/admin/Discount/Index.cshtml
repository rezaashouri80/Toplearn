@page
@using TopLearn.core.Convertor
@model TopLearn.Web.Pages.admin.Discount.IndexModel
@{
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست کدهای تخفیف</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
           
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">


                        <a href="/Admin/discount/CreateDiscount" style="margin: 10px" class="btn btn-success">افزودن کد جدبد</a>
                        <table class="table table-striped table-bordered table-hover dataTable no-footer">
                            <thead>
                                <tr>
                                    <th>کد تخفیف</th>
                                    <th>درصد نخیف</th>
                                    <th> تعداد</th>
                                    <th>تاریخ شروع</th>
                                    <th> تاریخ پایان</th>


                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var discount in Model.Discounts)
                                {
                                <tr>
                                    <td>@discount.DiscountCode</td>
                                    <td>@discount.DiscountPercent</td>
                                    <td>@discount.UsableCount</td>
                                    <td>@((discount.StartDate != null)?discount.StartDate.Value.ToShamsi():"")</td>
                                    <td>@((discount.EndDate != null)?discount.EndDate.Value.ToShamsi():"")</td>

                                    <td>
                                        <a href="/admin/discount/EditDiscount/@discount.DiscountId" class="btn btn-sm btn-success">ویرایش</a>

                                    </td>

                                </tr>
                                }
                            </tbody>
                        </table>
                        <!-- /.table-responsive -->

                    </div>
                </div><!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
    </div>
    <!-- /.col-lg-12 -->
</div>
