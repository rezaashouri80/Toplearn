@page
@model TopLearn.Web.Pages.Course.IndexModel
@{
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست دوره ها</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            
            <!-- /.panel-heading -->
            <div class="panel-body">
                <a href="/Admin/course/Createcourse" style="margin: 10px" class="btn btn-success">افزودن دوره جدبد</a>
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <div class="row">
                            <form>
                                <div class="col-md-4">
                                    <input type="text" class="form-control " name="FilterUserName" placeholder="نام کاربری" />
                                </div>
                                <div class="col-md-4">
                                    <input type="text" class="form-control " name="FilterEmail" placeholder="ایمیل" />
                                </div>
                                <div class="col-md-2">
                                    <button class="btn btn-sm btn-info" type="submit">جست و جو</button>
                                </div>

                                <div class="col-md-2">
                                    <a class="btn btn-sm btn-warning" href="/Admin/course">جدید</a>
                                </div>
                            </form>
                        </div>
                        <table class="table table-striped table-bordered table-hover dataTable no-footer">
                            <thead>
                            <tr>
                                <th>عکس دوره</th>
                                <th>نام دوره</th>
                                <th>تعداد قسمت ها</th>
                                <th>مدرس</th>
                                <th>دستورات</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var course in Model.listCourse)
                            {
                                <tr>
                                    <td>
                                        <img class="thumbnail"  src="/course/thumb\@course.ImageName"/>
                                    </td>
                                    <td>@course.CourseTitle</td>
                                    <td>@course.EpisodeCount</td>
                                    <td>
                                        @course.TeacherName
                                    </td>

                                    <td>
                                        <a href="/Admin/course/editcourse/@course.CourseId" class="btn btn-sm btn-success">ویرایش</a>
                                        <a href="/Admin/course/episode/@course.CourseId" class="btn btn-sm btn-info">قسمت ها</a>
                                        <a href="/Admin/users/deleteuser/@course.CourseId" class="btn btn-sm btn-danger">حذف</a>

                                    </td>

                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
                </div>
                    <!-- /.panel -->
                </div>
            </div>
    <!-- /.col-lg-12 -->
</div>