@using TopLearn.core.Convertor
@model IEnumerable<TopLearn.Datalayar.Entities.Order.Order>
@{
    ViewData["Title"] = "فاکتور های شما";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">تاپ لرن</a></li>
            <li class="breadcrumb-item active" aria-current="page"> فاکتور های شما </li>
        </ul>
    </nav>
</div>

<main>
    <div class="container">
        <div class="user-account">
            <div class="row">
                <partial name="_SideBar" />
                <div class="col-md-9 col-sm-8 col-xs-12">
                    <section class="user-account-content">
                        <header><h1> فاکتور شما </h1></header>
                        <div class="inner">
                      
                            <table class="table table-responsive table-bordered ">
                                <thead >
                                <tr>
                                    <th>شماره فاکتور</th>
                                    <th>قیمت</th>
                                    <th>تاریخ</th>
                                    <th>وضعیت</th>
                                    <th>دستورارت</th>
                                </tr>
                                </thead>
                                <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.OredrId</td>
                                        <td>@item.OrderSum</td>
                                        <td>@item.CreateDate.ToShamsi()</td>

                                        <td>@if (item.IsFinally)
                                            {
                                                <p class="text-success">پرداخت شده</p>
                                            }
                                            else
                                            {
                                                <p class="text-danger">پرداخت نشده</p>
                                            }
                                        </td>
                                        <td ><a href="/userpanel/order/showorder/@item.OredrId" class="btn btn-info">نمایش</a></td>
                                    </tr>
                                }
                             
                                </tbody>
                            </table>
                           
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</main>

