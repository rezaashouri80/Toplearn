@model TopLearn.core.DTOs.ForgetpasswordViewModel
@{
    ViewData["Title"] = "بازیابی کلمه عبور";
}

<nav aria-label="breadcrumb">
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">تاپ لرن</a></li>
        <li class="breadcrumb-item active" aria-current="page"> بازیابی کلمه عبور</li>
    </ul>
</nav>
<main class="client-page">
    <div class="container-content">
        @if (ViewBag.IsSucces == true)
        {
            <div class="alert alert-success">
                <p class="help-block">ایمیل فعالسازی برای شما ارسال شد</p>
            </div>
        
        }
        <header><h2> بازیابی کلمه عبور </h2></header>

        <div class="form-layer">

            <form asp-action="Forgetpassword" asp-controller="Account" method="post">

                <div class="input-group">
                    <span class="input-group-addon" id="email-address"><i class="zmdi zmdi-email"></i></span>
                    <input asp-for="Email" type="text" class="form-control" placeholder="ایمیل" aria-describedby="email-address">
                </div>
                <span asp-validation-for="Email"></span>

          

                <button type="submit" class="btn btn-success"> بازیابی کلمه عبور </button>

            </form>
        </div>

    </div>
</main>
